generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

enum UserRole {
  Student
  Professor
}

model User {
  id            String    @id @default(cuid())
  username      String   @unique
  password      String
  name          String?
  email         String   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole 
  courses       Course[] // Represents the courses associated with a user (either as a student or a professor)
}


model Course {
  id          String       @id
  name        String
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy User @relation(fields: [createById], references: [id])
  createById String
//   students    User[]    @relation("EnrolledStudents", references: [id]) // Represents the students enrolled in the course
}